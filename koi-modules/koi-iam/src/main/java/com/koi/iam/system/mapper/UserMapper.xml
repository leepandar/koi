<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.koi.iam.system.mapper.UserMapper">

    <select id="findPage" resultType="com.koi.iam.system.domain.dto.resp.UserResp">
        SELECT *
        FROM t_user ${ew.customSqlSegment}
    </select>

    <select id="list" resultType="com.koi.iam.system.domain.entity.User">
        SELECT *
        FROM t_user
    </select>


    <select id="selectResByUserId" resultType="java.lang.Long">
        SELECT res_id
        FROM sys_role_res
        WHERE role_id IN (SELECT role_id FROM sys_user_role WHERE user_id = #{userId})
    </select>

</mapper>
